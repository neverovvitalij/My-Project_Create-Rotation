{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}